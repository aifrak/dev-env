{
  // Editor:
  "editor.rulers": [80],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // Files:
  "files.associations": {
    "install": "shellscript",
    "uninstall": "shellscript",
    "run": "shellscript",
    "pytest.ini": "ini",
    ".markdownlintignore": "properties"
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/.history/**": true,
    "**/node_modules/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.history": true
  },

  // Search:
  "search.exclude": {
    "**/.git": true,
    "**/.history": true,
    "**/node_modules": true
  },

  // Python:
  "python.formatting.provider": "black",

  // Shellformat:
  "shellformat.useEditorConfig": true,

  // Shellcheck:
  "shellcheck.customArgs": ["-x"],
  "shellcheck.useWorkspaceRootAsCwd": true,

  // Task explorer:
  "taskExplorer.groupSeparator": ":",
  "taskExplorer.exclude": [
    "**/.history/**",
    "**/node_modules/**",
    "**/spec/**"
  ],

  // Prettier:
  "prettier.useEditorConfig": true,

  // Comment Divider:
  "comment-divider.length": 50,

  // Markdown All in One:
  "markdown.extension.orderedList.marker": "one",

  // Override languages:
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // VSCode icons:
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "extensions": ["docker-compose.dev.yml", "docker-compose.override.yml"],
      "filename": true
    },
    {
      "icon": "markdownlint",
      "extensions": [".markdownlintignore"],
      "filename": true
    }
  ],

  // Spelling:
  "cSpell.enableFiletypes": ["shellscript"],
  "cSpell.ignorePaths": [".history", "config"],
  "cSpell.words": [
    "Dependabot",
    "Dockerfiles",
    "TIMEFORMAT",
    "asdf",
    "autoload",
    "autoremove",
    "buildkit",
    "buildx",
    "chmod",
    "compinit",
    "copydir",
    "deps",
    "dirmngr",
    "dotfiles",
    "dpkg",
    "eval",
    "fpath",
    "gnupg",
    "hadolint",
    "markdownlintignore",
    "mkdir",
    "ohmyzsh",
    "preminor",
    "prepatch",
    "pytest",
    "readlink",
    "semver",
    "shfmt",
    "systemtap",
    "tapset",
    "uncommented",
    "zinit",
    "zsh"
  ],
  "cSpell.ignoreWords": [
    "Fira",
    "Fura",
    "aflags",
    "ahmadnassri",
    "aifrak",
    "copyfile",
    "dirhistory",
    "distro",
    "distros",
    "editorconfig",
    "erl",
    "esbenp",
    "fkirc",
    "foxundermoon",
    "github",
    "gitstatus",
    "gitstatusd",
    "globalias",
    "jxfo",
    "lsdeluxe",
    "ludeeus",
    "markdownlint",
    "pabio",
    "powerlevel",
    "shellcheck",
    "shellformat",
    "softprops",
    "tagger",
    "tvdias",
    "vsicons",
    "zcompdump",
    "zsh's",
    "zxfo",
    "zxvf"
  ]
}
